---
import { InfiniteMovingCards } from "@/components/ui/infinite-moving-cards";
import { Timeline } from "./ui/timeline";
import { SparklesCore } from "./ui/sparkles";
import { WavyBackground } from "./ui/wavy-background";
import { DottedGlowBackground } from "./ui/dotted-glow-background";
import { SpotlightNew } from "./ui/spotlight-new";
import { Spotlight } from "./ui/spotlight";

const timelineData = [
  {
    title: "2024",
    content: "Built and launched BioHalo version 2.0",
  },
  {
    title: "2023",
    content: "Started the project with a vision to change the world.",
  },
  {
    title: "2022",
    content: "Initial research and development phase.",
  },
];
---

<div class="relative w-full bg-white dark:bg-black">
  <Timeline data={timelineData} client:load />
</div>

<div
  class="h-[40rem] relative w-full bg-black flex flex-col items-center justify-center overflow-hidden rounded-md"
>
  <div class="w-full absolute inset-0 h-screen">
    <SparklesCore
      id="tsparticlesfullpage"
      background="transparent"
      minSize={0.6}
      maxSize={1.4}
      particleDensity={100}
      className="w-full h-full"
      particleColor="#FFFFFF"
      client:load
    />
  </div>
  <h1
    class="md:text-7xl text-3xl lg:text-6xl font-bold text-center text-white relative z-20"
  >
    BioHalo Sparkles
  </h1>
</div>

<div class="relative w-full h-screen overflow-hidden">
  <WavyBackground className="max-w-4xl mx-auto pb-40" client:load>
    <p
      class="text-2xl md:text-4xl lg:text-7xl text-white font-bold inter-var text-center"
    >
      Waves are cool
    </p>
    <p
      class="text-base md:text-lg mt-4 text-white font-normal inter-var text-center"
    >
      Leverage the power of waves to create beautiful backgrounds
    </p>
  </WavyBackground>
</div>

<div class="relative w-full h-screen bg-black overflow-hidden">
  <DottedGlowBackground client:load />
  <div
    class="absolute inset-0 flex items-center justify-center pointer-events-none z-10"
  >
    <h1 class="text-white text-4xl font-bold">Dotted Glow</h1>
  </div>
</div>

<div
  class="relative w-full h-screen bg-black/[0.96] antialiased bg-grid-white/[0.02] overflow-hidden"
>
  <SpotlightNew client:load />
  <div class="p-4 max-w-7xl mx-auto relative z-10 w-full pt-20 md:pt-0">
    <h1
      class="text-4xl md:text-7xl font-bold text-center bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
    >
      Spotlight New <br /> is here.
    </h1>
  </div>
</div>

<div
  class="h-[40rem] w-full rounded-md flex md:items-center md:justify-center bg-black/[0.96] antialiased bg-grid-white/[0.02] relative overflow-hidden"
>
  <Spotlight
    className="-top-40 left-0 md:left-60 md:-top-20"
    fill="white"
    client:load
  />
  <div class="p-4 max-w-7xl mx-auto relative z-10 w-full pt-20 md:pt-0">
    <h1
      class="text-4xl md:text-7xl font-bold text-center bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
    >
      Spotlight <br /> is the new trend.
    </h1>
  </div>
</div>

<section
  class="relative w-full min-h-screen bg-neutral-950 text-white overflow-hidden py-24 px-4 sm:px-8"
>
  {/* Background Effects - Toxic/Warning Theme */}
  <div
    class="absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
  >
    <div
      class="absolute top-[-10%] left-[-10%] w-[800px] h-[800px] bg-green-900/10 rounded-full blur-[120px] mix-blend-screen animate-pulse-slow"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] bg-yellow-900/10 rounded-full blur-[100px] mix-blend-screen"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,rgba(0,0,0,0.8)_100%)]"
    >
    </div>
  </div>

  <InfiniteMovingCards
    items={[
      {
        quote: "The world's most advanced AI is now available to everyone.",
        name: "John Doe",
        title: "CEO, Acme Corp",
      },
      {
        quote: "We are committed to making the world a better place.",
        name: "Jane Smith",
        title: "CTO, Tech Innovations",
      },
      {
        quote:
          "We are dedicated to providing the best possible service to our customers.",
        name: "Bob Johnson",
        title: "COO, Global Solutions",
      },
    ]}
    direction="left"
    speed="normal"
    pauseOnHover={true}
    className="mt-16"
    client:load
  />
</section>

---
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Separator } from "@/components/ui/separator";
import { DottedGlowBackgroundDemo } from "@/components/DottedGlowBackground.tsx";
import RainbowBG from "@/assets/images/ColorfulGradientRainbowTexture.jpeg";
import HiddenSkull from "@/components/ui/oldPageComponents/hidden-skull.tsx";
import { InteractiveNebulaShader } from "@/components/ui/liquid-shader";
import ElectricWavesShader from "@/components/ui/colorful-wave-pattern-1.tsx";
import LiquidCrystalShader from "@/components/ui/liquid-crystal-shader.tsx";
import PurpleVelvetHero from "@/components/ui/PurpleVelvetHero.tsx";
import EternalShadow from "@/components/EternalShadow.astro";
---

<section class="relative w-full h-full text-white overflow-hidden pb-24">
  <EternalShadow />
  <div class="absolute top-0 w-full h-[200px] bg-linear-to-b from-black via-black to-black/0 "/>
  <div
    class="relative w-full h-[600px] flex flex-col items-center justify-center overflow-visible"
  >
    <!-- <PurpleVelvetHero client:visible /> -->

  </div>
  
  
  <div
    class="relative w-full h-[600px] flex flex-col items-center justify-center overflow-visible"
  >
    <!-- <LiquidCrystalShader
      client:visible
      className="h-[80%] absolute top-0 overflow-visible border-2 border-red-500"
    /> -->
  </div>


  <div
    class="relative w-full h-[600px] flex flex-col items-center justify-center overflow-visible"
  >
    <!-- <InteractiveNebulaShader
      client:visible
      shiftX={-0.3}
      className="h-[80%] absolute top-0 overflow-visible border-2 border-red-500"
    /> -->
  </div>

  <div class="relative mx-auto flex w-full w-fullitems-center justify-center">
    <!-- Main Container -->
    <div
      class="relative z-10 flex w-full w-max-w-7xl flex-col items-center justify-between pl-8 text-center md:flex-row
      h-[400px] rounded-3xl overflow-hidden backdrop-blur-sm"
    >
      <!-- Content Container -->
      <div
        class="absolute inset-0 flex flex-row items-center justify-between pl-14 bg-linear-to-r from-black via-black to-black/0"
      >
        <!-- Text Content -->
        <div class="min-w-[420px] p-14 border border-gray-500/30 rounded-3xl">
          <h2
            class="text-center text-4xl font-normal tracking-tight text-neutral-500 sm:text-5xl md:text-left dark:text-neutral-400"
          >
            But forever chemicals {" "}
            <span class="font-bold text-neutral-400">come at a cost</span>?
          </h2>
          <p
            class="mt-4 max-w-lg text-center text-base text-neutral-600 md:text-left dark:text-neutral-300"
          >
            Unlock premium components, advanced animations, and exclusive
            templates to build stunning modern interfaces.
          </p>
        </div>
        <!-- Hidden Skull -->
        <HiddenSkull
          client:load
          className="mix-blend-color-burn min-w-[420px]"
        />
      </div>
    </div>
  </div>

  <!-- <div class="relative w-full h-[400px] flex flex-col items-center justify-center">
      <ElectricWavesShader client:visible className="w-full h-full absolute top-0 -translate-y-16 overflow-visible"/>
    </div> -->

  {/* Background Effects - Toxic/Warning Theme */}
  <div
    class="hidden absolute top-0 left-0 w-full h-full overflow-hidden pointer-events-none"
  >
    <div
      class="absolute top-[-10%] left-[-10%] w-[800px] h-[800px] bg-green-900/10 rounded-full blur-[120px] mix-blend-screen animate-pulse-slow"
    >
    </div>
    <div
      class="absolute bottom-[-10%] right-[-10%] w-[600px] h-[600px] bg-yellow-900/10 rounded-full blur-[100px] mix-blend-screen"
    >
    </div>
    <div
      class="absolute inset-0 bg-[radial-gradient(circle_at_center,transparent_0%,rgba(0,0,0,0.8)_100%)]"
    >
    </div>
  </div>

  <div class="hidden max-w-7xl mx-auto relative z-10">
    {/* Header */}
    <div class="mb-20 max-w-4xl mx-auto text-center">
      <h2 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight text-white">
        The <span
          class="text-transparent bg-clip-text bg-gradient-to-r from-green-500 to-yellow-500"
          >Price</span
        > of Progress
      </h2>
      <p
        class="text-xl md:text-2xl text-neutral-400 leading-relaxed font-light"
      >
        While halogens have built the modern world, they have left behind a
        legacy of persistence and pollution.
        <br />
        <span class="text-white font-medium">We are now paying the bill.</span>
      </p>
    </div>

    {/* Stats Grid */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {/* Stat 1 */}
      <Card
        className="bg-neutral-900/50 border-green-900/30 backdrop-blur-sm hover:border-green-500/50 transition-colors duration-500 group"
      >
        <CardHeader>
          <CardTitle
            className="text-4xl md:text-5xl font-bold text-green-500 group-hover:text-green-400 transition-colors"
          >
            10,000+
          </CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-lg text-neutral-300 font-medium">
            Fluorinated Compounds
          </p>
          <p class="text-sm text-neutral-500 mt-2">
            Already known and circulating in the environment.
          </p>
        </CardContent>
      </Card>

      {/* Stat 2 */}
      <Card
        className="bg-neutral-900/50 border-yellow-900/30 backdrop-blur-sm hover:border-yellow-500/50 transition-colors duration-500 group"
      >
        <CardHeader>
          <CardTitle
            className="text-4xl md:text-5xl font-bold text-yellow-500 group-hover:text-yellow-400 transition-colors"
          >
            €50bn+
          </CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-lg text-neutral-300 font-medium">
            Annual Health Costs
          </p>
          <p class="text-sm text-neutral-500 mt-2">
            Estimated health-related costs in Europe alone.
          </p>
        </CardContent>
      </Card>

      {/* Stat 3 */}
      <Card
        className="bg-neutral-900/50 border-red-900/30 backdrop-blur-sm hover:border-red-500/50 transition-colors duration-500 group"
      >
        <CardHeader>
          <CardTitle
            className="text-4xl md:text-5xl font-bold text-red-500 group-hover:text-red-400 transition-colors"
          >
            3,000+
          </CardTitle>
        </CardHeader>
        <CardContent>
          <p class="text-lg text-neutral-300 font-medium">
            Years of Persistence
          </p>
          <p class="text-sm text-neutral-500 mt-2">
            Maximum environmental persistence of some PFAS.
          </p>
        </CardContent>
      </Card>
    </div>

    <Separator className="bg-neutral-800 my-12" />

    {/* Impact Statement */}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h3 class="text-3xl font-bold text-white">
          The "Forever Chemical" Crisis
        </h3>
        <p class="text-neutral-400 text-lg leading-relaxed">
          PFAS (Per- and Polyfluoroalkyl Substances) are often called "forever
          chemicals" because they do not break down in the environment. They
          bio-accumulate in water, soil, and living organisms—including humans.
        </p>
        <div class="flex items-center gap-4">
          <div class="h-12 w-1 bg-red-500 rounded-full"></div>
          <p class="text-white font-medium italic">
            "Virtually every person on Earth has traces of PFAS in their blood."
          </p>
        </div>
      </div>

      {/* Visual Placeholder for Pollution/Map */}
      <div
        class="relative h-[300px] w-full rounded-2xl overflow-hidden border border-neutral-800 bg-neutral-900 flex items-center justify-center group"
      >
        <div
          class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1611273426728-c009c9eb8475?q=80&w=2787&auto=format&fit=crop')] bg-cover bg-center opacity-20 group-hover:opacity-30 transition-opacity duration-700 grayscale mix-blend-luminosity"
        >
        </div>
        <div class="relative z-10 text-center p-6">
          <span
            class="text-5xl font-bold text-neutral-700 group-hover:text-red-500/50 transition-colors duration-500"
            >20,000+</span
          >
          <p class="text-neutral-500 mt-2 uppercase tracking-widest text-sm">
            Contaminated Sites in Europe
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .animate-pulse-slow {
    animation: pulse 8s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 0.1;
    }
    50% {
      opacity: 0.3;
    }
  }
</style>

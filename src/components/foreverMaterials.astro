        <FeaturesSection client:visible />

        <!-- <AlternativeIntroSectionNoBG client:visible /> -->
        <div
            class="hidden w-1/3 absolute inset-0 flex flex-col items-center justify-start"
        >
            <CPUTile client:visible />
            <HalogenTile client:visible />
            <SurfactantsTile client:visible />
            <AerospaceTile client:visible />
            <!-- <ParticleImage imageSrc={BioHaloLogo.src} /> -->

            <h1
                class="text-4xl md:text-7xl font-bold text-center bg-clip-text text-transparent bg-gradient-to-b from-neutral-50 to-neutral-400 bg-opacity-50"
            >
            </h1>
        </div>
    </div>
</section>

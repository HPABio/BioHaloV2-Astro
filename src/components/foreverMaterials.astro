---
import AnimatedCPU from "@/components/ui/oldPageComponents/AnimatedCPU.tsx";
import BioHaloLogo from "@/assets/provided_materials/BioHalo_logo_png/BioHalo-Logo-Vector_white font.png";
import {
    CPUTile,
    HalogenTile,
    SurfactantsTile,
    AerospaceTile,
} from "@/components/ui/oldPageComponents/FluorinatedMaterialsExamples";
import { ParticleImage } from "@/components/ParticleImage.tsx";
